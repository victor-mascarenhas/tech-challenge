{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "Node16",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@shared/*": [
        "./src/shared"
      ],
      "@services/*": [
        "./src/services/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "declarations.d.ts",
    "src/**/*",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}